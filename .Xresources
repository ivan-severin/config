! #include ".colors/badwolf"
! #include ".colors/felix"
! #include ".colors/green"
#include ".colors/ocean-dark"
! #include ".colors/pnemva"
! #include ".colors/sloarized.dark"
! #include ".colors/solarized"
! #include ".colors/solarized_light"
! #include ".colors/tango"

! Appearance
URxvt*font: xft:DejaVu Sans Mono for Powerline:size=9
!URxvt*font: xft:Inconsolata for Powerline:size=10
URxvt.intensityStyles: false
URxvt.boldMode:       true
URxvt.skipBuiltinGlyphs: true
URxvt.loginShell: true
URxvt*title: urxvt
URxvt*termName: rxvt-unicode-256color
URxvt*urgentOnBell: true

URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false


! ScrollBar
URxvt.scrollBar:            false
URxvt.scrollBar_right:      false
URxvt.scrollstyle:          plain
URxvt.jumpScroll:           false

URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true
URxvt.scrollTtyOutput:      false

URxvt.buffered:             true
URxvt.pointerBlank:         true
URxvt.underlineURLs:        true
URxvt.saveLines:            4096


! Ctrl+Arrows
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! Transparency
URxvt.transparent:   false
!URxvt.transparent:   true
!URxvt.shading:       0

! URLs
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select,matcher
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! Clickable urls
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! Increace fonts
! URxvt.keysym.M-Up:           perl:font-size:increase
! URxvt.keysym.M-Down:         perl:font-size:decrease
! URxvt.keysym.M-S-Up:         perl:font-size:incglobal
! URxvt.keysym.M-S-Down:       perl:font-size:decglobal

URxvt.iso14755:              false
URxvt.iso14755_52:           false
URxvt.keysym.M-c:            perl:clipboard:copy
URxvt.keysym.M-v:            perl:clipboard:paste

! rofi colors
rofi.color-enabled:	true
rofi.color-window:	#000, #000, #000
rofi.color-normal:	#111, #819396, #222, #008ed4, #ffffff
rofi.color-active:	#002b37, #008ed4, #003643, #008ed4, #66c6ff
rofi.color-urgent:	#002b37, #da4281, #003643, #008ed4, #890661

rofi.fake-transparency:	true
rofi.lines: 5
rofi.bw: 0
rofi.opacity: "10"
rofi.hide-scrollbar: true
rofi.width:	30
